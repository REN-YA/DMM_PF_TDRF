<div class="container">
  <div class="row justify-content-center">
    <div class="product_index col-8 text-center">
      <h2>商品一覧</h2>
    </div>
  </div>
  　<% if @store == current_store %>
    <div class="new_product">
      <%= link_to '新規登録', new_store_product_path , class: "btn-lg btn-primary" %>
    </div>
    <div>
      <% @genres.each do |genre| %>
      <div class="genre_title row justify-content-center">
      　<h3><%= genre.name %></h3>
   　  </div>
        <table class="table">
          <thead class="thead">
            <tr>
              <th>商品画像</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>販売ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @products.where(genre_id: genre.id).each do |product| %>
              <tr>
                <td><%= attachment_image_tag(product, :image, :fill, 150, 150) %></td>
                <td><%= link_to product.name, store_product_path(product), class: "product_#{product.id}" %></td>
                <td><%= product.selling_price %>円</td>
                <td>
                  <% if product.is_selling == "on_sale" %>
                    <span class="text-success"><%= product.is_selling_i18n %></span>
                  <% else %>
                    <span class="text-secondary"><%= product.is_selling_i18n %></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  <% else %>
    <% @genres.each do |genre| %>
    <div class="genre-name">
      <h2><%= genre.name %></h2>
     </div>
    <div class="product-list">
      <% Product.where(genre_id: genre.id).each do |product| %>
      <div class="product">
          <div class="product-image">
            <%= attachment_image_tag(product, :image, :fill, 150, 150) %>
          </div>
          <div class="product-name">
            <%= link_to product.name, store_product_path(product), class: "product_#{product.id}" %>
          </div>
          <div class="product-price">
            <%= product.selling_price %>円
          </div>
          <div class="product-is_selling">
            <% if product.is_selling == "on_sale" %>
              <span class="text-success"><%= product.is_selling_i18n %></span>
            <% else %>
              <span class="text-secondary"><%= product.is_selling_i18n %></span>
            <% end %>
          </div>
      </div>
      <% end %>
    </div>
    <% end %>
  <% end %>
</div>

