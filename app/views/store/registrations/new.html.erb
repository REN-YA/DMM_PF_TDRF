<div class='container'>
  <div class='row justify-content-center'>
    <h1 class="font-weight-normal mt-5 mb-5">店舗登録</h1>
  </div>
  
  <div class='row justify-content-center'>
    <div class='col-4'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "store/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :イメージ画像%><br/>
          <%= f.attachment_field :image %>
        </div>
        <div class="field">
          <%= f.label :店舗名 %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :店舗ジャンル %><br />
          <%= f.text_field :store_genres, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :郵便番号 %><br />
          <%= f.text_field :post_code, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :住所 %><br />
          <%= f.text_field :address, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :営業時間 %><br />
          <%= f.text_field :business_hours, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :ご予約サイト%><br />
          <%= f.text_field :reservation_site, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :お問い合わせ電話番号 %><br />
          <%= f.text_field :telephone_number, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= render "store/shared/links" %>
    </div>
  </div>
</div>