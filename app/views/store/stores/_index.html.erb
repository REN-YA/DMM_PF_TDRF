<div  class="list-store">
  <div class="table_title">
    <p class="row justify-content-center">店舗一覧</p>
  </div>
  <table class="table">
    <thead class="thead">
      <tr>
        <th>店舗名</th>
        <th>総料理評価</th>
        <th>総レビュー数</th>
      </tr>
    </thead>
    <tbody>
    <div class="scroll-list jscroll">
      <% stores.each do |store| %>
        <tr>
          <td class="text-center">
            <%= link_to store_store_path(store.id) do %>
            <%= store.name %>
            <% end %>
          </td>
          <td class="text-center">
            <span class="review-evaluation" data-score="<%= @reviews.sum(:evaluation).fdiv(@reviews.count)%>"></span>
          </td>
          <td class="text-center"><%= @reviews.count %></td>
        </tr>
      <% end %>

    </div>
    </tbody>
  </table>
</div>

<script>
  $('.review-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>
