<div class="container">
  <div class="row justify-content-center">
    <div class="genre col-8 text-center">
      <h2>ジャンル編集</h2>
    </div>
  </div>
  <div class='row justify-content-center'>
    <div class='col-4 text-center'>
      <%= form_with model:@genre, url: store_genre_path, local: true do |f| %>
      <%= f.label :name, 'ジャンル名' %></br>
      <%= f.text_field :name, class:'form-control', placeholder: "ジャンル名" %></br>
      <br><%= f.submit 'ジャンル名更新', class:'btn btn-primary' %></br>
      <% end %>
    </div>
  </div>
</div>