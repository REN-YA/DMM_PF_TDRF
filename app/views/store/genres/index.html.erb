
<div class='container'>
  <div class="row justify-content-center">
    <div class="genre col-8 text-center">
      <h2>ジャンル作成&一覧</h2>
    </div>
  </div>

  <% if @genre.errors.any? %>
    <div class = "alert">
      <%= @genre.errors.count %>件のエラーが発生しました
      <% @genre.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </div>
  <% end %>

  <div class='row'>
    <div class='col-md-3'>
    <%= form_with model:@genre, url: store_genres_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label 'ジャンル作成' %>
        <%= f.text_field :name, class:'form-control name', placeholder: "ジャンル名" %>
        <br><%= f.submit 'ジャンル追加', class:'btn btn-primary btn-block' %></br>
      </div>
    <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>ジャンル一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre.name %></td>
            <td><%= link_to '編集', edit_store_genre_path(genre), class: 'btn-lg btn-success' %></td>
            <td><%= link_to '削除', store_genre_path(genre), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-lg btn-danger "%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>