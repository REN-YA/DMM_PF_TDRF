<% if review.favorited_by?(current_user) %>
  <%= link_to user_review_favorite_path(review), method: :delete, remote: true do %>
  <span style="color: red;">♥</span>
  <%= review.favorites.count %>
  <% end %>
<% else %>
  <%= link_to user_review_favorites_path(review) , method: :post, remote: true do %>
  ♡<%= review.favorites.count %>
  <% end %>
<% end %>