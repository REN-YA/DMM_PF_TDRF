<div class="container">
  <div class="row justify-content-center">
    <h1 class="font-weight-normal mt-5 mb-5">会員情報編集</h1>
  </div>
  <%= form_with model: @user, url: user_users_path, local:true do |f| %>
      <div class="field">
      <%= f.label :イメージ画像%><br/>
      <%= f.file_field :image %>
      </div>
    
      <div class="field">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>
    
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <%= f.submit "変更を保存" %>
  <% end %>
</div>