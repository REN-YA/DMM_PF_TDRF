<div class="container">
  <div class="row justify-content-center">
    <div class="user_edit font-weight-normal mt-5 mb-5 text-center">
    <h1>会員情報編集</h1>
    </div>
  </div>
  <div class='row justify-content-center'>
    <div class='col-3'>
      <%= form_with model: @user, url: user_user_path, local:true do |f| %>
        <div class="field">
          <%= f.label :イメージ画像%><br/>
          <%= f.file_field :image %>
        </div>
        <div class="field">
          <%= f.label :ユーザー名 %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <br>
          <%= f.submit "変更を保存", class: 'btn btn-primary'%>
          <%= link_to "退会する", user_user_unsubscribe_path(current_user.id), class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>