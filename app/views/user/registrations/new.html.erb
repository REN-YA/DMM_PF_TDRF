<div class='container'>
  <div class='row justify-content-center'>
    <h1 class="font-weight-normal mt-5 mb-5">ユーザー登録</h1>
  </div>

  <div class='row justify-content-center'>
    <div class='col-4'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :イメージ画像%><br/>
          <%= f.attachment_field :image %>
        </div>
        <div class="field">
          <%= f.label :ユーザー名 %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名" %>
        </div>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス【例：〇〇〇〇@gmail.com】", size: "40x20" %>
        </div>
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "登録パスワード" %>
        </div>
        <div class="field">
          <%= f.label :パスワード【確認用】 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "登録パスワード確認用" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= render "user/shared/links" %>
    </div>
  </div>
</div>
