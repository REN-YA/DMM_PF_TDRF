
  <div class="row justify-content-center">
    <div class="review_new col-8 text-center">
      <h4>レビューする</h4>
    </div>
  </div>

  <% if review.errors.any? %>
    <div class = "alert">
      <%= review.errors.count %>件のエラーが発生しました
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>

    <%= form_with model: review, url: user_reviews_path, local:true do |f| %>
    <div class="row justify-content-center">
      <div id="evaluate_stars" class="col-3">
        <%= f.label :evaluation, '料理評価', class: 'evaluation-stars' %>
      </div>
    </div>
    <div class="row justify-content-center">
      <%= f.text_area :contents, rows:'3' , cols:'60',placeholder: "コメントをここに" %>
    </div>
      <%= f.hidden_field :product_id, value: params[:id] %>
    <div class="row justify-content-center">
      <%= f.submit '投稿', class:"btn btn-warning" %>
    </div>
    <% end %>



<script>
  $('#evaluate_stars').raty(
    {
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'review[evaluation]',
    half: true,
  });

</script>

