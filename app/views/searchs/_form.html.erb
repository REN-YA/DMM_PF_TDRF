<%= form_tag(search_path, method: :get) do %>
    <%= text_field_tag 'content' %>
    <%= select_tag 'model', options_for_select({ "ユーザー" => "user", "店舗" => "store" }) %>
    <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "前半一致" => "forward", "後半一致" => "backward", "部分一致" => "partial" }) %>
    <%= submit_tag '検索' %>
<% end %>